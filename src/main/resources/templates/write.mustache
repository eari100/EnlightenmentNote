{{>layout/header}}

<input type="hidden" id="mode" value="{{mode}}">
<input type="hidden" id="post-seq" value="{{postSeq}}">
</head>
<body>

<h1 id="mode-description"></h1>

<div style="margin-top:50px;margin-left:100px;margin-right:100px;">
    <div id="search-div" class="d-grid gap-1">
        <div class="p-2 bg-light border">
            <div class="input-group flex-nowrap input-group-sm">
                <span class="input-group-text" id="title-addon-wrapping">제목</span>
                <input type="text" id="title" class="form-control" placeholder="제목을 입력하세요." aria-label="title" aria-describedby="title-addon-wrapping">
            </div>
        </div>
        <div class="p-2 bg-light border">
            <div class="input-group flex-nowrap input-group-sm ">
                <span class="input-group-text" id="author-addon-wrapping">작성자</span>
                <input type="text" id="author" class="form-control" placeholder="작성자를 입력하세요." aria-label="author" aria-describedby="author-addon-wrapping">
            </div>
        </div>
        <div class="p-2 bg-light border">
            <select id="category" class="form-select form-select-sm" aria-label="category select box"></select>
        </div>
        <div class="p-2 bg-light border">
            <div class="input-group">
                <span class="input-group-text">본문</span>
                <textarea id="content" class="form-control" aria-label="content textarea" style="height: 400px"></textarea>
                <button id="add-template-btn" type="button" class="btn btn-secondary btn-sm float-end">템플릿 추가</button>
            </div>
        </div>
    </div>
    <button id="write-btn" type="button" class="btn btn-secondary btn-sm float-end"></button>
</div>

{{>layout/footer}}

<script src="/js/api/postsApi.js"></script>
<script src="/js/api/categoriesApi.js"></script>
<script src="/js/util/componentUtil.js"></script>
<script src="/js/view/write.js"></script>